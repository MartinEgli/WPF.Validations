<Window
    x:Class="Bfa.Common.WPF.Validations.ValidationTestGui.OneValueSortedLocalizedPlaceholderFallbackValidationByValidationRules.OneValueSortedLocalizedPlaceholderFallbackValidationByValidationRulesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Bfa.Common.WPF.Validations.ValidationTestGui.OneValueSortedLocalizedPlaceholderFallbackValidationByValidationRules.Views"
    Title="One Value Sorted Localized Placeholder Fallback Validation By Validation Rules"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <ComboBox
                    DisplayMemberPath="NativeName"
                    ItemsSource="{Binding Source={x:Static lex:LocalizeDictionary.Instance}, Path=MergedAvailableCultures}"
                    SelectedItem="{Binding Source={x:Static lex:LocalizeDictionary.Instance}, Path=Culture}" />
            </ToolBar>
        </ToolBarTray>
        <views:OneValueSortedLocalizedPlaceholderFallbackValidationByValidationRulesView />
    </DockPanel>
</Window>
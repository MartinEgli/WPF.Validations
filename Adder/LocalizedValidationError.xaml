<UserControl
    x:Class="Bfa.Common.WPF.Validations.ValidationTestGui.LocalizedValidationError"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bfa.Common.WPF.Validations.ValidationTestGui"
    xmlns:localizations="clr-namespace:Bfa.Common.WPF.Localizations;assembly=Bfa.Common.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Foreground="Red" Text="{Binding ErrorContent}" />
        <TextBlock Foreground="Red" Text="{Binding ErrorContent.TextKey}" />
        <TextBlock Foreground="Red" Text="{localizations:LocTextBinding KeyBinding={Binding ErrorContent.TextKey}}" />
    </StackPanel>
</UserControl>
<Window
    x:Class="Bfa.Common.WPF.Validations.ValidationTestGui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Adder"
    xmlns:views="clr-namespace:Bfa.Common.WPF.Validations.ValidationTestGui.Views"
    Title="Validation Demo"
    Background="Beige"
    ResizeMode="CanResize">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <views:CalculatorViewUsingValidationRule Grid.Row="0" Grid.Column="0" />

        <views:CalculatorViewUsingIDataErrorInfo Grid.Row="0" Grid.Column="1" />

        <views:CalculatorViewWithErrorTemplate Grid.Row="1" Grid.Column="0" />
        <views:CalculatorViewUsingINotifyDataErrorInfo Grid.Row="1" Grid.Column="1" />
    </Grid>
</Window>